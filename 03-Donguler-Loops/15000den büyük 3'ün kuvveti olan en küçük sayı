/*15000'den büyük 3'ün kuvveti olan en küçük sayiyi ve kaçıncı kuvveti olduğunu yazan program.*/
#include <stdio.h>

int main(int argc, const char * argv[]) {
    int i,sonuc=1;
    
    for(i=1;sonuc<15000;i++){
        sonuc=pow(3,i);
       // printf("sonuc: %d\n",sonuc); kontrol icin,
    }
   // printf("15000den bir önceki:   i: %d sonuc: %d\n",i-2,sonuc/3); kontrol icin.
    printf("15000'den buyuk ve 3'un kuvveti olan en kucuk tamsayi %d, bu sayi 3'un %d kuvvetidir.\n",sonuc/3,i-1);
    
    return 0;
}
