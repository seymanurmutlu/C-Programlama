#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x1,x2;
    int y1,y2;
    float ortx,orty;  //iki tam sayinin ortalamasi kesirli sayi olabilecegi icin float.

    printf("1.noktanin koordinatlarini giriniz = \n");
    scanf("%d %d",&x1,&y1);

    printf("2.noktanin koordinatlarini giriniz = \n");
    scanf("%d  %d",&x2,&y2);

    ortx=(x1+x2)/2;
    orty=(y1+y2)/2;

    printf("Orta noktanin koordinatlari = %f , %f",ortx,orty);

    return 0;
}
